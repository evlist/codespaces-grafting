{
  "name": "WordPress Plugin Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspaces/wp-plugin-codespace",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "WordPress",
      "protocol": "http",
      "autoForward": true
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "containerEnv": {
    "DOCKER_API_VERSION": "1.43",
    "COMPOSE_PROJECT_NAME": "wp-plugin-codespace_devcontainer"
  },
  "postStartCommand": "bash -lc 'docker compose -f .devcontainer/docker-compose.yml -p \"$COMPOSE_PROJECT_NAME\" up -d db wordpress || true; .devcontainer/bin/wp-install.sh || true'",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "wongjn.php-sniffer"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      }
    }
  }
}
